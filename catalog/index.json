{
  "version": "1.0",
  "apiVersion": "catalog.v1",
  "kind": "ConnectorCatalog",
  "metadata": {
    "name": "noesis-connectors",
    "description": "Official Noesis Connector Catalog",
    "version": "1.0.0",
    "publisher": "Data Power",
    "labels": {
      "organization": "data-power",
      "tier": "official",
      "support": "community"
    },
    "created": "2025-01-22T10:00:00Z",
    "updated": "2025-09-29T14:57:28Z"
  },
  "connectors": {
    "postgres": {
      "name": "postgres",
      "displayName": "PostgreSQL Source Connector",
      "description": "Extract data from PostgreSQL databases with CDC support",
      "image": "docker.io/benoittailhades/noesis-postgres-connector@sha256:95f84755d0402ef9e1db86d964f7969509ed1fee74e8b6d0c981c504c1faf92b",
      "semver": "1.0.0",
      "api": "connector.v1",
      "protocol": "grpc",
      "kind": "source",
      "capabilities": {
        "discovery": true,
        "checkConnection": true,
        "incremental": true,
        "cdc": false,
        "schema_evolution": true,
        "partitioning": false,
        "filtering": true,
        "auth": [
          "password",
          "ssl"
        ],
        "encryption": [
          "tls",
          "ssl"
        ]
      },
      "configSchema": {
        "type": "object",
        "required": [
          "hostname",
          "port",
          "database",
          "username",
          "password"
        ],
        "properties": {
          "hostname": {
            "type": "string",
            "title": "Database Host",
            "description": "PostgreSQL server hostname or IP address",
            "pattern": "^[a-zA-Z0-9.-]+$",
            "examples": [
              "localhost",
              "postgres.example.com",
              "192.168.1.100"
            ]
          },
          "port": {
            "type": "integer",
            "title": "Port",
            "description": "PostgreSQL server port number",
            "default": 5432,
            "minimum": 1,
            "maximum": 65535
          },
          "database": {
            "type": "string",
            "title": "Database Name",
            "description": "Name of the PostgreSQL database to connect to",
            "minLength": 1,
            "maxLength": 64,
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
          },
          "username": {
            "type": "string",
            "title": "Username",
            "description": "Database username for authentication",
            "minLength": 1,
            "maxLength": 64
          },
          "password": {
            "type": "string",
            "title": "Password",
            "description": "Database password for authentication",
            "format": "password",
            "secret": true,
            "minLength": 1
          },
          "sslMode": {
            "type": "string",
            "title": "SSL Mode",
            "description": "SSL connection mode for secure connections",
            "enum": [
              "disable",
              "require",
              "verify-ca",
              "verify-full",
              "prefer"
            ],
            "default": "prefer"
          },
          "schema": {
            "type": "string",
            "title": "Schema",
            "description": "Database schema to extract data from",
            "default": "public",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
          },
          "connectTimeout": {
            "type": "integer",
            "title": "Connection Timeout",
            "description": "Connection timeout in seconds",
            "default": 30,
            "minimum": 1,
            "maximum": 300
          },
          "statementTimeout": {
            "type": "integer",
            "title": "Statement Timeout",
            "description": "Statement execution timeout in seconds",
            "default": 300,
            "minimum": 1,
            "maximum": 3600
          }
        }
      },
      "labels": {
        "org.yourtool.api": "connector.v1",
        "org.yourtool.protocol": "grpc",
        "org.yourtool.vendor": "data-power",
        "org.yourtool.category": "database",
        "org.yourtool.tier": "stable"
      },
      "platforms": [
        "linux/amd64"
      ],
      "docsUrl": "https://docs.noesis.dev/connectors/postgres",
      "minRunner": "1.0.0",
      "resources": {
        "requests": {
          "cpu": "100m",
          "memory": "256Mi"
        },
        "limits": {
          "cpu": "500m",
          "memory": "1Gi"
        }
      }
    }
  },
  "annotations": {
    "catalog.noesis.io/last-refresh": "2025-01-22T10:00:00Z",
    "catalog.noesis.io/connector-count": "1",
    "catalog.noesis.io/license": "Apache-2.0"
  }
}
